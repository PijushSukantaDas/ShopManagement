<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopmanagement">

    <application
        android:name=".PostallyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Postally"
        android:usesCleartextTraffic="true">


        <activity android:name=".ui.activity.MainActivity" />
        <activity android:name=".ui.activity.SupplierActivity" />
        <activity android:name=".ui.activity.CustomerActivity" />
        <activity android:name=".ui.activity.ProductActivity" />
        <activity android:name=".ui.activity.ReceiptActivity" />
        <activity android:name=".ui.activity.PaymentActivity" />
        <activity android:name=".ui.activity.PurchaseActivity" />
        <activity android:name=".ui.activity.SalesActivity" />
        <activity android:name=".ui.activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />
    </application>

</manifest>