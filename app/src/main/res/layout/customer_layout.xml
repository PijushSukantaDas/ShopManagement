<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="customer"
            type="com.example.shopmanagement.data.models.Customer" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/customerCardView"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:background="@color/receipt_color"

                android:id="@+id/customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">


                    <LinearLayout
                        android:background="@drawable/textview_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mobile"
                            android:gravity="center"
                            android:textColor="@color/purple_500"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:id="@+id/customerMobile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textStyle="bold"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:background="@drawable/textview_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:gravity="center"
                            android:textColor="@color/purple_500"/>
                        <TextView
                            android:layout_marginTop="3dp"
                            android:id="@+id/customerAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textStyle="bold"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/textview_style"
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"

                    android:orientation="vertical">

                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/editCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:src="@drawable/edit_icon" />

                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/deleteCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/delete_icon" />

                    <!--                    <LinearLayout-->
                    <!--                        android:background="@drawable/textview_style"-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:orientation="vertical">-->

                    <!--                        <TextView-->
                    <!--                            android:layout_width="match_parent"-->
                    <!--                            android:layout_height="wrap_content"-->
                    <!--                            android:gravity="center"-->
                    <!--                            android:text="Expense"-->
                    <!--                            android:textColor="@color/purple_500" />-->

                    <!--                        <TextView-->
                    <!--                            android:layout_width="match_parent"-->
                    <!--                            android:layout_height="match_parent"-->
                    <!--                            android:editable="false"-->
                    <!--                            android:focusable="false"-->
                    <!--                            android:gravity="center"-->
                    <!--                            android:textStyle="bold" />-->

                    <!--                    </LinearLayout>-->




                </LinearLayout>


            </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>


</layout>